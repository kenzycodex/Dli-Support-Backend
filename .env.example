# .env.example
APP_NAME="DLI Support Platform"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=

DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_POOL_SIZE=10
DB_TIMEOUT=30

CORS_ALLOWED_ORIGINS=
FRONTEND_URL=
SESSION_DOMAIN=
SANCTUM_STATEFUL_DOMAINS=

JWT_SECRET=
JWT_TTL=60

FILESYSTEM_DISK=public

TICKET_ATTACHMENT_RETENTION_DAYS=365
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES="pdf,png,jpg,jpeg,gif,doc,docx,txt"
MAX_ATTACHMENTS_PER_TICKET=5
MAX_ATTACHMENTS_PER_RESPONSE=3

MAX_EXECUTION_TIME=120
MAX_INPUT_TIME=60
MEMORY_LIMIT=512M
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=50M

DB_LOG_QUERIES=false
SESSION_DRIVER=database
LOG_LEVEL=error
LOG_CHANNEL=stack


# Add these to your .env file to control logging behavior

# ==========================================
# API LOGGING CONFIGURATION
# ==========================================

# Master switch for API logging (overrides all other settings)
API_LOGGING_ENABLED=true

# Individual logging components (only work if API_LOGGING_ENABLED=true)
API_REQUEST_LOGGING=true
API_RESPONSE_LOGGING=true

# Logging modes
API_LOG_ERRORS_ONLY=false    # Only log requests/responses with errors (4xx, 5xx)
API_LOG_MINIMAL=false        # Minimal logging (no headers, body, etc.)
API_LOG_DETAILED=true        # Include detailed request/response data
API_LOG_RESPONSES=false      # Log response bodies for successful requests

# Security - customize sensitive fields/headers to filter
API_LOG_SENSITIVE_HEADERS="authorization,cookie,x-api-key,x-csrf-token"
API_LOG_SENSITIVE_FIELDS="password,password_confirmation,_token,secret,key,api_key,access_token"

# ==========================================
# EXAMPLE CONFIGURATIONS
# ==========================================

# DEVELOPMENT MODE (Full logging)
# API_LOGGING_ENABLED=true
# API_REQUEST_LOGGING=true
# API_RESPONSE_LOGGING=true
# API_LOG_DETAILED=true
# API_LOG_ERRORS_ONLY=false

# PRODUCTION MODE (Errors only)
# API_LOGGING_ENABLED=true
# API_REQUEST_LOGGING=false
# API_RESPONSE_LOGGING=true
# API_LOG_DETAILED=false
# API_LOG_ERRORS_ONLY=true

# MINIMAL LOGGING (Basic info only)
# API_LOGGING_ENABLED=true
# API_REQUEST_LOGGING=true
# API_RESPONSE_LOGGING=true
# API_LOG_MINIMAL=true
# API_LOG_DETAILED=false

# DISABLED (No API logging)
# API_LOGGING_ENABLED=false